<Response>
  <% if @body.downcase.include?('help me')%>
    <Message>Please dial 911</Message>
  <% elsif @body.downcase.include?('abracadabra') %>
    <Message>You found the magic word!</Message>
  <% else %>
    <% @user = "not_found" %>
    <% @users.each do |user| %>
      <% @user = user if @body.include?(user.user_id) %>
    <% end %>
    <% if @user == "not_found" %>
      <Message>Please send your user id with the text.  Thanks!</Message>
    <% else %>
      <Message>Hi <%= @user.first_name %> thanks for texting us from <%= @zip %>. Please click on the following link to access your employee information: <%= "https://ec8b440c.ngrok.io/stores/#{@user.store_id}/users/#{@user.id}" %></Message>
    <% end %>
  <% end %>
</Response>
