<Response>
  <% if @body.downcase.include?('help me')%>
    <Message>Please dial 911 immediately.</Message>
  <% elsif @body.downcase.include?('abracadabra') %>
    <Message>You found the magic word!</Message>
  <% else %>
    <% @store = "not_found" %>
    <% @stores.each do |store| %>
      <% @store = store if @body.include?(store.id.to_s) %>
    <% end %>
    <% if @store == "not_found" %>
      <Message>Please send your store id with the text.  Thanks!</Message>
    <% else %>
      <Message>Hi person from <%= @store.store_name %>.  Thanks for texting us from <%= @zip %>. Please click on the following link to access your store information: <%= "https://ec8b440c.ngrok.io/stores/#{@store.id}" %> </Message>
    <% end %>
  <% end %>
</Response>
